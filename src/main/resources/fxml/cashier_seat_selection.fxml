<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.cinema.controller.CashierSeatSelectionController"
            styleClass="main-background">
    
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-bar">
            <padding>
                <Insets top="15" right="30" bottom="15" left="30"/>
            </padding>
            
            <!-- Back Button -->
            <Button text="â† Back" onAction="#handleBack" styleClass="btn-back"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- Movie Info -->
            <VBox alignment="CENTER">
                <Label fx:id="movieTitleLabel" text="Movie Title" styleClass="header-movie-title"/>
                <Label fx:id="screeningInfoLabel" text="Date | Time | Hall" styleClass="header-screening-info"/>
            </VBox>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- Price Info -->
            <VBox alignment="CENTER_RIGHT">
                <Label fx:id="selectedSeatsLabel" text="Selected: 0 seats" styleClass="selected-seats-label"/>
                <Label fx:id="totalPriceLabel" text="Total: $0.00" styleClass="total-price-label"/>
            </VBox>
        </HBox>
    </top>
    
    <center>
        <HBox spacing="30">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>
            
            <!-- Left Side: Seat Selection -->
            <VBox alignment="CENTER" spacing="20" HBox.hgrow="ALWAYS">
                <!-- Seat Legend -->
                <HBox alignment="CENTER" spacing="30">
                    <HBox alignment="CENTER" spacing="8">
                        <Rectangle width="25" height="25" styleClass="seat-available" arcWidth="5" arcHeight="5"/>
                        <Label text="Available" styleClass="legend-label"/>
                    </HBox>
                    <HBox alignment="CENTER" spacing="8">
                        <Rectangle width="25" height="25" styleClass="seat-selected" arcWidth="5" arcHeight="5"/>
                        <Label text="Selected" styleClass="legend-label"/>
                    </HBox>
                    <HBox alignment="CENTER" spacing="8">
                        <Rectangle width="25" height="25" styleClass="seat-reserved" arcWidth="5" arcHeight="5"/>
                        <Label text="Reserved" styleClass="legend-label"/>
                    </HBox>
                </HBox>
                
                <!-- Seats Grid Container -->
                <VBox alignment="CENTER" spacing="15" styleClass="seats-container">
                    <padding>
                        <Insets top="20" right="30" bottom="20" left="30"/>
                    </padding>
                    
                    <!-- Row Labels and Seats -->
                    <GridPane fx:id="seatsGrid" hgap="8" vgap="8" alignment="CENTER"/>
                    
                    <!-- Screen -->
                    <Region prefHeight="15"/>
                    <StackPane styleClass="screen-container">
                        <Rectangle width="350" height="25" styleClass="screen-shape" arcWidth="5" arcHeight="5"/>
                        <Label text="SCREEN" styleClass="screen-label"/>
                    </StackPane>
                </VBox>
                
                <!-- Book Button -->
                <Button fx:id="bookButton" text="book my seats" onAction="#handleBook" 
                        styleClass="btn-reserve" disable="true"/>
            </VBox>
            
            <!-- Right Side: Reservations List -->
            <VBox spacing="15" styleClass="reservations-panel" minWidth="300" maxWidth="350">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <Label text="Reservations" styleClass="reservations-title"/>
                
                <ScrollPane fitToWidth="true" styleClass="reservations-scroll" VBox.vgrow="ALWAYS">
                    <VBox fx:id="reservationsListBox" spacing="10">
                        <padding>
                            <Insets top="5" right="5" bottom="5" left="5"/>
                        </padding>
                    </VBox>
                </ScrollPane>
                
                <!-- Action Buttons -->
                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="changeTicketButton" text="Change Ticket" onAction="#handleChangeTicket" 
                            styleClass="btn-change" disable="true" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                    <Button fx:id="cancelTicketButton" text="Cancel Ticket" onAction="#handleCancelTicket" 
                            styleClass="btn-cancel" disable="true" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                </HBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>
