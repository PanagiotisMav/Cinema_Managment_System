<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.cinema.controller.AdminAddUserController"
            styleClass="main-background" stylesheets="@../styles/style.css">
    
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="header-bar">
            <padding>
                <Insets top="15" right="30" bottom="15" left="30"/>
            </padding>
            
            <!-- Back Button -->
            <Button text="â† Back" onAction="#handleBack" styleClass="btn-back"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <Region prefWidth="30"/>
        </HBox>
    </top>
    
    <center>
        <VBox alignment="CENTER" spacing="20">
            <!-- Form Container -->
            <VBox alignment="CENTER" spacing="12" styleClass="login-box" maxWidth="320.0" minWidth="280.0">
                <padding>
                    <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
                </padding>
                
                <!-- Email Field -->
                <TextField fx:id="emailField" promptText="Email" styleClass="text-field-custom" prefHeight="38.0" maxWidth="260.0"/>
                
                <!-- First Name Field -->
                <TextField fx:id="firstNameField" promptText="First Name" styleClass="text-field-custom" prefHeight="38.0" maxWidth="260.0"/>
                
                <!-- Last Name Field -->
                <TextField fx:id="lastNameField" promptText="Last Name" styleClass="text-field-custom" prefHeight="38.0" maxWidth="260.0"/>
                
                <!-- Phone Field -->
                <TextField fx:id="phoneField" promptText="Phone Number" styleClass="text-field-custom" prefHeight="38.0" maxWidth="260.0"/>
                
                <!-- Password Field -->
                <StackPane maxWidth="260.0">
                    <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-field-custom" prefHeight="38.0"/>
                    <TextField fx:id="passwordTextField" promptText="Password" styleClass="text-field-custom" prefHeight="38.0" visible="false" managed="false"/>
                    <HBox alignment="CENTER_RIGHT" pickOnBounds="false">
                        <padding>
                            <Insets right="10"/>
                        </padding>
                        <Button fx:id="togglePasswordBtn" text="Show" onAction="#togglePasswordVisibility" styleClass="password-toggle"/>
                    </HBox>
                </StackPane>
                
                <!-- Repeat Password Field -->
                <StackPane maxWidth="260.0">
                    <PasswordField fx:id="repeatPasswordField" promptText="Repeat Password" styleClass="text-field-custom" prefHeight="38.0"/>
                    <TextField fx:id="repeatPasswordTextField" promptText="Repeat Password" styleClass="text-field-custom" prefHeight="38.0" visible="false" managed="false"/>
                    <HBox alignment="CENTER_RIGHT" pickOnBounds="false">
                        <padding>
                            <Insets right="10"/>
                        </padding>
                        <Button fx:id="toggleRepeatPasswordBtn" text="Show" onAction="#toggleRepeatPasswordVisibility" styleClass="password-toggle"/>
                    </HBox>
                </StackPane>
                
                <!-- Role Selection -->
                <HBox alignment="CENTER" spacing="10">
                    <padding>
                        <Insets top="10"/>
                    </padding>
                    <ToggleButton fx:id="adminToggle" text="Admin" styleClass="role-toggle"/>
                    <ToggleButton fx:id="cashierToggle" text="Cashier" styleClass="role-toggle"/>
                    <ToggleButton fx:id="userToggle" text="User" styleClass="role-toggle"/>
                </HBox>
                
                <!-- Error Label -->
                <Label fx:id="errorLabel" styleClass="error-label"/>
                
                <!-- Create Account Button -->
                <Button text="create account" onAction="#handleCreateAccount" styleClass="btn-primary" prefWidth="180" prefHeight="38"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
