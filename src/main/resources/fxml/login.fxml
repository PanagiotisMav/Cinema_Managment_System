<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.cinema.controller.LoginController"
            styleClass="main-background">
    
    <center>
        <VBox alignment="CENTER" spacing="20">
            <VBox alignment="CENTER" spacing="15" styleClass="login-box" maxWidth="350">
                <padding>
                    <Insets top="40" right="40" bottom="40" left="40"/>
                </padding>
                
                <!-- Title -->
                <Label text="Cinema Management System" styleClass="app-title"/>
                
                <Region prefHeight="10"/>
                
                <!-- Email Field -->
                <VBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="Email" styleClass="field-label"/>
                    <TextField fx:id="emailField" promptText="Enter your email" styleClass="text-field-custom"/>
                </VBox>
                
                <!-- Password Field -->
                <VBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="Password" styleClass="field-label"/>
                    <StackPane>
                        <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="text-field-custom"/>
                        <TextField fx:id="passwordTextField" promptText="Enter your password" styleClass="text-field-custom" visible="false" managed="false"/>
                        <HBox alignment="CENTER_RIGHT" pickOnBounds="false">
                            <padding>
                                <Insets right="10"/>
                            </padding>
                            <Button fx:id="togglePasswordBtn" text="Show" onAction="#togglePasswordVisibility" styleClass="password-toggle"/>
                        </HBox>
                    </StackPane>
                </VBox>
                
                <!-- Error Label -->
                <Label fx:id="errorLabel" styleClass="error-label" wrapText="true"/>
                
                <!-- Login Button -->
                <Button text="Log in" onAction="#handleLogin" styleClass="btn-primary" maxWidth="Infinity"/>
                
                <!-- OR Separator -->
                <HBox alignment="CENTER" spacing="10">
                    <Separator HBox.hgrow="ALWAYS" maxWidth="80"/>
                    <Label text="OR" styleClass="separator-text"/>
                    <Separator HBox.hgrow="ALWAYS" maxWidth="80"/>
                </HBox>
                
                <!-- Sign Up Button -->
                <Button text="Sign up" onAction="#handleSignUp" styleClass="btn-signup" maxWidth="Infinity"/>
                
                <Region prefHeight="5"/>
                
                <!-- Continue as Guest -->
                <Button text="continue as guest" onAction="#handleGuestLogin" styleClass="btn-guest" maxWidth="Infinity"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
