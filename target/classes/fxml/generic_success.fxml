<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.cinema.controller.GenericSuccessController"
            styleClass="main-background">
    
    <center>
        <VBox alignment="CENTER" spacing="30">
            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>
            
            <!-- Success Icon -->
            <StackPane>
                <Circle radius="60" styleClass="success-circle"/>
                <Label text="âœ“" styleClass="success-checkmark"/>
            </StackPane>
            
            <!-- Success Message -->
            <Label fx:id="messageLabel" text="Operation completed successfully" styleClass="success-title" wrapText="true" textAlignment="CENTER"/>
            
            <!-- Additional Info (optional) -->
            <Label fx:id="additionalInfoLabel" text="" styleClass="success-info" wrapText="true" textAlignment="CENTER" visible="false" managed="false"/>
            
            <!-- Return Button -->
            <Button text="Return Back" onAction="#handleReturn" styleClass="btn-return"/>
        </VBox>
    </center>
</BorderPane>
